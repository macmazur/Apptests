<!-- Your menu ids must match your nav graph ids -->
<!-- checkableBehavior must be single for top level destinations -->
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="navigation_view">
    <group
        android:id="@+id/drawer_menu_top"
        android:checkableBehavior="single">
        <!-- Set the starting destination to checked -->
        <item
            android:id="@+id/mapsFragment"
            android:contentDescription="@string/menu_map"
            android:icon="@drawable/ic_share"
            android:title="@string/menu_map" />
        <item
            android:id="@+id/articlesFragment"
            android:contentDescription="@string/menu_articles"
            android:icon="@drawable/ic_share"
            android:title="@string/menu_articles" />
        <item
            android:id="@+id/bookmarksFragment"
            android:contentDescription="@string/menu_bookmarks"
            android:icon="@drawable/ic_day"
            android:title="@string/menu_bookmarks" />
    </group>

