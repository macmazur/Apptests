<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/articlesFragment">

    <fragment
        android:id="@+id/articlesFragment"
        android:name="www.fokus.techbytes.ui.articles.ArticlesFragment"
        android:label="App Tests Lab"
        tools:layout="@layout/fragment_articles">
        <action
            android:id="@+id/action_articlesFragment_to_articleDetailsFragment"
            app:destination="@id/articleDetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_articlesFragment_to_bookmarksFragment"
            app:destination="@id/bookmarksFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_articlesFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <!--mmazur
        <action
            android:id="@+id/action_articlesFragment_to_drawerActivity"
            app:destination="@id/drawerActivity" />-->
    </fragment>
    <fragment
        android:id="@+id/bookmarksFragment"
        android:name="www.fokus.techbytes.ui.bookmarks.BookmarksFragment"
        android:label="Bookmarks"
        tools:layout="@layout/fragment_bookmarks" >
        <action
            android:id="@+id/action_bookmarksFragment_to_articleDetailsFragment"
            app:destination="@id/articleDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/articleDetailsFragment"
        android:name="www.fokus.techbytes.ui.details.ArticleDetailsFragment"
        android:label="Article Details"
        tools:layout="@layout/fragment_article_details">
        <argument
            android:name="article"
            app:argType="www.fokus.techbytes.model.Article" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="www.fokus.techbytes.ui.about.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
    <!--mmazur
    <activity
        android:id="@+id/drawerActivity"
        android:name="www.fokus.techbytes.DrawerActivity"
        tools:layout="@layout/activity_drawer"/>-->
</navigation>
